{{#> layout title='Edit Blog' user=user }}
<main>
  <section class="blog-form">
    <form action="/blog-update/{{data.id}}?_method=PATCH" method="POST" enctype="multipart/form-data" class="form-container">
      <h1 class="section-title" style="color:rgb(0, 0, 0);">Edit Provinsi</h1>

      <div class="addblog-form">
        <div class="form-field">
          <label for="nama" class="form-label">Nama</label>
            <input id="nama" name="nama" class="form-input" type="text" placeholder="enter nama here..." 
          value="{{data.nama}}" required />
        </div>

          <div class="form-field">
            <label for="diresmikan" class="form-label">Diresmikan</label>
            <input id="diresmikan" name="diresmikan" class="form-input" type="date" value="{{data.diresmikan}}" required />
          </div>

          <div class="form-field">
            <label for="image" class="form-label">Photo</label>
                <img src="{{data.photo}}" id="preview" style="width:40%;">
              <div class="form-input">
                <input id="image" style="font-size:smaller; width:100%;" name="image"  type="file" placeholder="title"  />
              </div>
          </div>

          
        <div class="form-field">
          <label for="pulau" class="form-label">Pulau</label>
          <input id="pulau" name="pulau" class="form-input" type="text" placeholder="nama provinsi"  value="{{data.pulau}}" required />
        </div>

        <div class="button-group">
          <button type="submit" class="btn btn-orange">Edit Blog</button>
        </div>
      </div>
    </form>
  </section>
</main>

<script src="/assets/js/image-preview.js"></script>

{{!--<script src="assets/js/blog.js"></script> --}}

{{/layout}}